<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_common"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.havan.common.presentation.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_aplicativosFragment"
            app:destination="@id/aplicativosFragment" />
    </fragment>
    <fragment
        android:id="@+id/coletorFragment"
        android:name="br.com.havan.common.presentation.coletor.ColetorFragment"
        android:label="fragment_coletor"
        tools:layout="@layout/fragment_coletor" >
        <argument
            android:name="aplicativo"
            app:argType="br.com.havan.common.presentation.aplicativos.AplicativoModel" />
    </fragment>
    <fragment
        android:id="@+id/aplicativosFragment"
        android:name="br.com.havan.common.presentation.aplicativos.AplicativosFragment"
        android:label="fragment_aplicativos"
        tools:layout="@layout/fragment_aplicativos">
        <action
            android:id="@+id/action_aplicativosFragment_to_coletorFragment"
            app:destination="@id/coletorFragment" />
    </fragment>

</navigation>